---
import Page from "../components/Page.astro"
import config from "../siteDetails.json"
---

<Page>
  <!-- Page Header -->
  <section class="bg-earth-primary dark:bg-deep-charcoal py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-earth-primary dark:text-warm-light-beige mb-6">
        {config.about.title}
      </h1>
      <p class="text-xl text-earth-secondary dark:text-light-warm-beige-alt max-w-3xl mx-auto">
        {config.about.subtitle}
      </p>
    </div>
  </section>

  <!-- About Content -->
  <section class="py-20 bg-soft-sand dark:bg-dark-clay">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Main Content Block -->
      <div class="mb-16">
        <div class="flex items-start gap-8">
          <div class="flex-1">
            <div class="prose prose-lg max-w-none">
              <p class="text-lg text-earth-secondary dark:text-light-warm-beige-alt leading-relaxed mb-6">
                {config.about.description}
              </p>
              
              {config.about.paragraphs.map((paragraph) => (
                <p class="text-lg text-earth-secondary dark:text-light-warm-beige-alt leading-relaxed mb-6">
                  {paragraph}
                </p>
              ))}
            </div>
          </div>
          <div class="hidden lg:block flex-shrink-0">
            <img 
              src={config.about.images.growth}
              alt="Growth and healing journey" 
              class="w-48 h-auto rounded-lg"
            />
          </div>
        </div>
      </div>



    </div>
  </section>
</Page>