---
import config from "../siteDetails.json"

interface Props {
  variant?: 'default' | 'compact';
  showHours?: boolean;
  backgroundColor?: string;
}

const { 
  variant = 'default', 
  showHours = true, 
  backgroundColor = 'bg-terracotta' 
} = Astro.props;
---

<section id="contact" class={`py-12 ${backgroundColor}`}>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-10">
      <h2 class="text-2xl lg:text-3xl font-bold text-white mb-3">
        {config.contact.title}
      </h2>
      <p class="text-lg text-white opacity-90 max-w-2xl mx-auto">
        {config.contact.description}
      </p>
    </div>
    
    <!-- Contact Info Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <!-- Phone -->
      <div class="flex items-center justify-start space-x-3 bg-forest-brown bg-opacity-90 rounded-lg p-4 hover:bg-opacity-100 transition-all duration-200 shadow-medium">
        <div class="w-10 h-10 bg-warm-ochre rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-forest-brown" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
          </svg>
        </div>
        <div class="text-left">
          <h3 class="text-sm font-semibold text-white mb-1">Phone</h3>
          <a href={`tel:${config.phone}`} class="text-white hover:text-warm-ochre transition-colors text-sm font-medium">
            {config.phone}
          </a>
        </div>
      </div>
      
      <!-- Email -->
      <div class="flex items-center justify-start space-x-3 bg-forest-brown bg-opacity-90 rounded-lg p-4 hover:bg-opacity-100 transition-all duration-200 shadow-medium">
        <div class="w-10 h-10 bg-sage-green rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
          </svg>
        </div>
        <div class="text-left">
          <h3 class="text-sm font-semibold text-white mb-1">Email</h3>
          <a href={`mailto:${config.email}`} class="text-white hover:text-warm-ochre transition-colors text-sm font-medium break-all">
            {config.email}
          </a>
        </div>
      </div>
      
      <!-- Location -->
      <div class="flex items-center justify-start space-x-3 bg-forest-brown bg-opacity-90 rounded-lg p-4 hover:bg-opacity-100 transition-all duration-200 shadow-medium sm:col-span-2 lg:col-span-1">
        <div class="w-10 h-10 bg-clay-orange rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="text-left">
          <h3 class="text-sm font-semibold text-white mb-1">Location</h3>
          <p class="text-white text-sm font-medium">{config.location}</p>
          {config.contact.address && (
            <a 
              href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(config.contact.address)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-white hover:text-warm-ochre transition-colors opacity-75 hover:opacity-100 text-xs mt-0.5 inline-block underline decoration-1 underline-offset-2"
            >
              {config.contact.address}
            </a>
          )}
        </div>
      </div>
    </div>
    
    {showHours && (
      <!-- Hours Section -->
      <div class="space-y-6">
        <!-- Hours Title -->
        <div class="text-center">
          <h3 class="text-xl font-semibold text-white mb-2">Office Hours</h3>
          <p class="text-white opacity-75 text-sm">Schedule your appointment during our available hours</p>
        </div>
        
        <!-- Hours Grid -->
        <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-7 gap-4 mb-6">
          <!-- Monday -->
          <div class="bg-forest-brown bg-opacity-90 rounded-lg p-3 text-center shadow-medium">
            <h4 class="text-xs font-semibold text-white mb-1">Mon</h4>
            <p class="text-white text-xs font-medium">{config.contact.hours.monday}</p>
          </div>
          
          <!-- Tuesday -->
          <div class="bg-forest-brown bg-opacity-90 rounded-lg p-3 text-center shadow-medium">
            <h4 class="text-xs font-semibold text-white mb-1">Tue</h4>
            <p class="text-white text-xs font-medium">{config.contact.hours.tuesday}</p>
          </div>
          
          <!-- Wednesday -->
          <div class="bg-forest-brown bg-opacity-90 rounded-lg p-3 text-center shadow-medium">
            <h4 class="text-xs font-semibold text-white mb-1">Wed</h4>
            <p class="text-white text-xs font-medium">{config.contact.hours.wednesday}</p>
          </div>
          
          <!-- Thursday -->
          <div class="bg-forest-brown bg-opacity-90 rounded-lg p-3 text-center shadow-medium">
            <h4 class="text-xs font-semibold text-white mb-1">Thu</h4>
            <p class="text-white text-xs font-medium">{config.contact.hours.thursday}</p>
          </div>
          
          <!-- Friday -->
          <div class="bg-forest-brown bg-opacity-90 rounded-lg p-3 text-center shadow-medium">
            <h4 class="text-xs font-semibold text-white mb-1">Fri</h4>
            <p class="text-white text-xs font-medium">{config.contact.hours.friday}</p>
          </div>
          
          <!-- Saturday -->
          <div class="bg-forest-brown bg-opacity-90 rounded-lg p-3 text-center shadow-medium">
            <h4 class="text-xs font-semibold text-white mb-1">Sat</h4>
            <p class="text-white text-xs font-medium">{config.contact.hours.saturday}</p>
          </div>
          
          <!-- Sunday -->
          <div class="bg-forest-brown bg-opacity-90 rounded-lg p-3 text-center shadow-medium">
            <h4 class="text-xs font-semibold text-white mb-1">Sun</h4>
            <p class="text-red-400 text-xs font-medium">{config.contact.hours.sunday}</p>
          </div>
        </div>
        
        <!-- CTA -->
        <div class="text-center">
          <a 
            href="#contact"
            class="inline-block btn-secondary px-6 py-3 rounded-lg font-semibold transform hover:scale-105 shadow-medium"
          >
            Schedule Appointment
          </a>
          <p class="text-white opacity-75 text-xs mt-2">Get started with your first session</p>
        </div>
      </div>
    )}
  </div>
</section>